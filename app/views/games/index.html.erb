<div class="content">
<h1> Games: </h1>

  <ul class="all-games">
    <% games.each do |game| %>
      <h4>
        <li>
          <%= link_to game.name, game_path(game) %>
          <span>
            <%= link_to "Delete", game, method: :delete, data: { confirm: 'Are you sure you want to delete this game?' }, class: 'button is-small is-danger is-outlined' %>
          </span>
        </li>
      </h4>
    <% end %>
  </ul>
</div>

<div> <%= link_to "Add Game", new_game_path, class: 'button is-primary' %> </div>
