<%= form_for(category) do |f| %>
  <div class="content">

    <div class="errors">
      <ul>
        <% category.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>

    <p>
      <%= f.label :name, class: "label" %>
      <%= f.text_field :name, class: 'input', placeholder: 'Boardgames' %>
    </p>

    <div>
      <%= f.submit class: "button is-primary", value: "Submit" %>
    </div>

  </div>
<% end %>
