<div class="content">
<h1 class="title is-1 user"> Friends: </h1>

  <ul class="all-users">
    <% users.each do |user| %>
      <h4>
        <li>
          <%= link_to user.username, user_path(user) %>
          <span>
            <%= link_to "Delete", user, method: :delete, data: { confirm: 'Are you sure you want to delete this user?' }, class: 'button is-small is-danger is-outlined' %>
          </span>
        </li>
      </h4>
    <% end %>
  </ul>
</div>

<div> <%= link_to "Add Friend", new_user_path, class: 'button is-primary' %> </div>
